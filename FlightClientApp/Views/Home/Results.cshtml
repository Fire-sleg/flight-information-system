@model List<FlightClientApp.Models.Flight>
@{
    ViewData["Title"] = "Search Results";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/result.css" />
</head>
<body>
    <div class="clouds">
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
    </div>
    <div class="results-container">
        <div class="page-header">
            <h1>
                <i class="fas fa-plane"></i> Search Results
            </h1>
            <p class="subtitle">Your flight information below</p>
        </div>
        <div class="results-card flight-animation">
            <div class="card-icon icon-results">
                <i class="fas fa-list"></i>
            </div>
            <h5>Flight Results</h5>
            @if (Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Flight Number</th>
                            <th>Departure Time</th>
                            <th>Departure Airport</th>
                            <th>Arrival Airport</th>
                            <th>Duration (min)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var flight in Model)
                        {
                            <tr>
                                <td>@flight.FlightNumber</td>
                                <td>@flight.DepartureDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@flight.DepartureAirportCity</td>
                                <td>@flight.ArrivalAirportCity</td>
                                <td>@flight.DurationMinutes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="no-results">
                    <i class="fas fa-exclamation-circle me-2"></i>No flights found matching your criteria.
                </div>
            }
            <a asp-controller="Home" asp-action="Index" class="btn btn-back">
                <i class="fas fa-arrow-left me-1"></i> Back to Search
            </a>
        </div>
    </div>
</body>
</html>