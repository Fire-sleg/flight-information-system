@model dynamic
@{
    ViewData["Title"] = "Flight Search";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <div class="clouds">
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
    </div>
    <div class="search-container">
        <div class="page-header">
            <h1>
                <i class="fas fa-plane-departure"></i> Flight Search
            </h1>
            <p class="subtitle">Find your perfect flight in seconds</p>
        </div>
        <div class="row g-4">
            <!-- By Flight Number -->
            <div class="col-lg-6">
                <div class="search-card flight-animation">
                    <div class="card-icon icon-flight">
                        <i class="fas fa-plane"></i>
                    </div>
                    <h5>Search by Flight Number</h5>
                    <form asp-controller="Home" asp-action="GetFlightByNumber" method="post">
                        <div class="row g-3">
                            <div class="col-8">
                                <div class="input-icon">
                                    <i class="fas fa-ticket-alt"></i>
                                    <input name="flightNumber" class="form-control" placeholder="e.g. PS101, BA456" required />
                                </div>
                            </div>
                            <div class="col-4">
                                <button class="btn btn-search btn-primary-custom w-100">
                                    <i class="fas fa-search me-1"></i> Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- By Date -->
            <div class="col-lg-6">
                <div class="search-card">
                    <div class="card-icon icon-calendar">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h5>Search by Date</h5>
                    <form asp-controller="Home" asp-action="GetFlightsByDate" method="post">
                        <div class="row g-3">
                            <div class="col-8">
                                <div class="input-icon">
                                    <i class="fas fa-calendar-day"></i>
                                    <input name="date" type="date" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-4">
                                <button class="btn btn-search btn-primary-custom w-100">
                                    <i class="fas fa-search me-1"></i> Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- By Departure -->
            <div class="col-lg-6">
                <div class="search-card">
                    <div class="card-icon icon-departure">
                        <i class="fas fa-plane-departure"></i>
                    </div>
                    <h5>Search by Departure</h5>
                    <form asp-controller="Home" asp-action="GetFlightsByDepartureAndDate" method="post">
                        <div class="row g-3">
                            <div class="col-5">
                                <div class="input-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <input name="city" class="form-control" placeholder="Kyiv" required />
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="input-icon">
                                    <i class="fas fa-calendar"></i>
                                    <input name="date" type="date" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-2">
                                <button class="btn btn-search btn-accent w-100">
                                    <i class="fas fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- By Arrival -->
            <div class="col-lg-6">
                <div class="search-card">
                    <div class="card-icon icon-arrival">
                        <i class="fas fa-plane-arrival"></i>
                    </div>
                    <h5>Search by Arrival</h5>
                    <form asp-controller="Home" asp-action="GetFlightsByArrivalAndDate" method="post">
                        <div class="row g-3">
                            <div class="col-5">
                                <div class="input-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <input name="city" class="form-control" placeholder="Warsaw" required />
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="input-icon">
                                    <i class="fas fa-calendar"></i>
                                    <input name="date" type="date" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-2">
                                <button class="btn btn-search btn-accent w-100">
                                    <i class="fas fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>